  <div class="jumbotron">
    <h4>Secret Codes </h4>
    <%= form_tag('/generate_codes') do -%>
      <%=select_tag("scode_count", options_for_select([1, 10, 20, 50, 100], selected:  '10')) %>
      <%= submit_tag 'Generate Secret Code', class: "btn btn-primary btn-sm"  %>
    <% end -%>
  </div>

    <div class="container ">
      <h4>List of Secret Codes</h4>
      <table class="table table-striped table-hover">
        <thead>
          <tr class="bg-success">
            <th>ID</th>
            <th>SecretCode</th>
            <th>Email</th>
          </tr>
        </thead>
        <tbody>
          <% @codes.each do |c| %>
          <tr>
            <td><%= c.id %></td>
            <td><%= c.scode %></td>
            <td><%= c.user.email rescue '' %></td>
          </tr>
          <% end %>

        </tbody>
      </table>
    </div>
